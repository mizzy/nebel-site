guard 'shell' do
  watch(/layouts\/(.+)/) { `stellar` }
  watch(/static\/(.+)/)  { `stellar` }
  watch(/posts\/(.+)/)   { `stellar` }
  watch(/plugins\/(.+)/) { `stellar` }
end

guard 'livereload' do
  watch(/layouts\/(.+)/)
  watch(/static\/(.+)/)
  watch(/posts\/(.+)/)
  watch(/plugins\/(.+)/)
end
